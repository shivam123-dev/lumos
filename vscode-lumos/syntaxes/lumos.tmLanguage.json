{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LUMOS",
  "scopeName": "source.lumos",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.lumos",
          "match": "//.*$"
        },
        {
          "name": "comment.block.lumos",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.lumos",
          "begin": "#\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.attribute.lumos"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.attribute.lumos"
            }
          },
          "patterns": [
            {
              "name": "entity.name.function.attribute.lumos",
              "match": "\\b(solana|account|key|max)\\b"
            },
            {
              "include": "#numbers"
            },
            {
              "name": "punctuation.separator.attribute.lumos",
              "match": "[(),]"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lumos",
          "match": "\\b(struct|enum|use|pub|type|const)\\b"
        },
        {
          "name": "storage.modifier.lumos",
          "match": "\\b(pub|mut)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.primitive.lumos",
          "match": "\\b(u8|u16|u32|u64|u128|i8|i16|i32|i64|i128|f32|f64|bool|String)\\b"
        },
        {
          "name": "entity.name.type.solana.lumos",
          "match": "\\b(PublicKey|Pubkey|Signature|Keypair)\\b"
        },
        {
          "name": "entity.name.type.option.lumos",
          "match": "\\b(Option)\\b"
        },
        {
          "name": "entity.name.type.lumos",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lumos",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lumos",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.lumos",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.lumos",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.lumos",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.lumos",
          "match": "\\b[0-9][0-9_]*(?:\\.[0-9][0-9_]*)?(?:[eE][+-]?[0-9_]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.lumos",
          "match": "->|=>|::|<|>|\\+"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.lumos",
          "match": "[,;]"
        },
        {
          "name": "punctuation.brackets.curly.lumos",
          "match": "[{}]"
        },
        {
          "name": "punctuation.brackets.round.lumos",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.square.lumos",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.colon.lumos",
          "match": ":"
        }
      ]
    }
  }
}
