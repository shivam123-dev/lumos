{
  "Solana Struct": {
    "prefix": "solstruct",
    "body": [
      "#[solana]",
      "struct ${1:Name} {",
      "    ${2:field}: ${3:type},",
      "}"
    ],
    "description": "Create a Solana struct"
  },
  "Solana Account Struct": {
    "prefix": "solaccount",
    "body": [
      "#[solana]",
      "#[account]",
      "struct ${1:Name}Account {",
      "    ${2:authority}: PublicKey,",
      "    ${3:field}: ${4:type},",
      "}"
    ],
    "description": "Create a Solana account struct"
  },
  "Unit Enum": {
    "prefix": "enumu",
    "body": [
      "#[solana]",
      "enum ${1:Name} {",
      "    ${2:Variant1},",
      "    ${3:Variant2},",
      "    ${4:Variant3},",
      "}"
    ],
    "description": "Create a unit enum (state machine)"
  },
  "Tuple Enum": {
    "prefix": "enumt",
    "body": [
      "#[solana]",
      "enum ${1:Name} {",
      "    ${2:Variant1}(${3:PublicKey}),",
      "    ${4:Variant2}(${5:PublicKey}, ${6:u64}),",
      "}"
    ],
    "description": "Create a tuple enum (data-carrying variants)"
  },
  "Struct Enum (Instruction Pattern)": {
    "prefix": "enums",
    "body": [
      "#[solana]",
      "enum ${1:Name}Instruction {",
      "    Initialize {",
      "        authority: PublicKey,",
      "        ${2:field}: ${3:type},",
      "    },",
      "    ${4:Action} {",
      "        ${5:field}: ${6:type},",
      "    },",
      "}"
    ],
    "description": "Create a struct enum (Solana instruction pattern)"
  },
  "Field with PublicKey": {
    "prefix": "fpubkey",
    "body": "${1:field}: PublicKey,",
    "description": "Add a PublicKey field"
  },
  "Field with u64": {
    "prefix": "fu64",
    "body": "${1:field}: u64,",
    "description": "Add a u64 field"
  },
  "Field with String": {
    "prefix": "fstring",
    "body": "${1:field}: String,",
    "description": "Add a String field"
  },
  "Field with Array": {
    "prefix": "farray",
    "body": "${1:field}: [${2:type}],",
    "description": "Add an array field"
  },
  "Field with Option": {
    "prefix": "foption",
    "body": "${1:field}: Option<${2:type}>,",
    "description": "Add an optional field"
  },
  "Max Length Attribute": {
    "prefix": "max",
    "body": "#[max(${1:length})]",
    "description": "Add max length attribute"
  },
  "Key Attribute": {
    "prefix": "key",
    "body": "#[key]",
    "description": "Add key attribute"
  }
}
