{
  "name": "lumos",
  "displayName": "LUMOS Language Support",
  "description": "Syntax highlighting, IntelliSense, and validation for LUMOS schema language",
  "version": "0.1.0",
  "publisher": "rector-labs",
  "author": {
    "name": "RECTOR",
    "email": "rector@rectorlabs.dev"
  },
  "license": "MIT OR Apache-2.0",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/RECTOR-LABS/lumos"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "lumos",
    "solana",
    "blockchain",
    "schema",
    "borsh",
    "anchor"
  ],
  "activationEvents": [
    "onLanguage:lumos"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lumos",
        "aliases": [
          "LUMOS",
          "lumos"
        ],
        "extensions": [
          ".lumos"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lumos",
        "scopeName": "source.lumos",
        "path": "./syntaxes/lumos.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lumos",
        "path": "./snippets/lumos.json"
      }
    ],
    "configuration": {
      "title": "LUMOS",
      "properties": {
        "lumos.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable LUMOS schema validation"
        },
        "lumos.codeGeneration.autoGenerate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically generate Rust/TypeScript on save"
        }
      }
    },
    "commands": [
      {
        "command": "lumos.generate",
        "title": "LUMOS: Generate Code",
        "category": "LUMOS"
      },
      {
        "command": "lumos.validate",
        "title": "LUMOS: Validate Schema",
        "category": "LUMOS"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0"
  }
}
